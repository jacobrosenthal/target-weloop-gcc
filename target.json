{
  "name": "weloop-gcc",
  "version": "0.0.0",
  "inherits": {
    "nordic-nrf51822-gcc-unofficial-fota": "^1.0.0"
  },
  "description": "Unofficial yotta Target Description using GCC to compile for Tommy Weloop 16KB device.",
  "homepage": "https://github.com/jacobrosenthal/target-weloop-gcc",
  "repository": {
    "url": "git@github.com:jacobrosenthal/target-weloop-gcc.git",
    "type": "git"
  },
  "licenses": [
    {
      "url": "https://spdx.org/licenses/Apache-2.0",
      "type": "Apache-2.0"
    }
  ],
  "keywords": [
    "ble",
    "nrf51822",
    "nordic",
    "gcc",
    "tommy",
    "weloop"
  ],
  "similarTo": [
    "mkit",
    "nrf51dk"
  ],
  "config": {
    "nrf51822": {
      "ram_size": "16K"
    },
    "image": {
      "heap": {
        "warning_threshold": 1024
      }
    },
    "hardware": {
      "pins": {
        "RX_PIN_NUMBER": "p15",
        "TX_PIN_NUMBER": "p16",
        "CTS_PIN_NUMBER": "p27",
        "RTS_PIN_NUMBER": "p27",        
        "BUTTON1": "p17",
        "BUTTON2": "p18",
        "BUTTON3": "p19",
        "BUTTON4": "p20",
        "LED1": "p21",
        "LED2": "p22",
        "LED3": "p23",
        "LED4": "p23",
        "MOTOR1": "p29",
        "LCD_ENABLE": "p6",
        "LCD_BACKLIGHT": "p7",
        "LCD_VOLTAGE_REG": "p13",
        "SPI_PSELMOSI0": "p12",
        "SPI_PSELMISO0": "p9",
        "SPI_PSELSS0": "p8",
        "SPI_PSELSCK0": "p11",
        "ACCEL_INT1": "p3",
        "ACCEL_INT2": "p2",
        "BATTERY_CHARGING_INT_PIN": "p25",
        "BATTERY_FULLY_CHARGED_INT_PIN": "p24"
      }
    }
  }
}
